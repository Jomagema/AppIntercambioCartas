<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appintercambiocartas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppIntercambioCartas">
        <activity android:name=".Colecciones.CreateActivity"></activity>
        <activity android:name=".Colecciones.YugiohActivity" />
        <activity android:name=".Colecciones.PokemonActivity" />
        <activity android:name=".Colecciones.MagicActivity" />
        <activity android:name=".Colecciones.DBSuperActivity" />
        <activity android:name=".User" />
        <activity android:name=".Principal.LoginActivity" />
        <activity android:name=".Principal.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Principal.MainActivity" />
    </application>

</manifest>